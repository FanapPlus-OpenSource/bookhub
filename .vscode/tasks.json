{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet build",
            "type": "process",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "clear": true,
                "echo": true,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": [
                "$msCompile",
                "$tsc"
            ]
        }
    ]
}